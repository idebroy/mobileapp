<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/track_bw"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#3366FF"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/activity_destination_share"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/share" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/activity_select_destination_train_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="Select Destination"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_22" />

            <TextView
                android:id="@+id/activity_select_destination_train_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="Select Destination"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_22" />
        </LinearLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/info" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/activity_destination_enter_coach_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:background="#9B3823"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
         
            android:gravity="center"
            android:text="Enter Coach"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>
    
    <TextView
           android:textColor="#3366FF"
        android:visibility="gone"
        android:layout_gravity="right"
        android:text="asdasd"
        android:layout_marginRight="@dimen/padding_10dp"
        android:textSize="@dimen/text_size_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_destination_coach_number" 
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:background="#80ffffff"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/activity_destination_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="-2dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_destination_bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#9B3823"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/activity_destination_bottom_sation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tap on a station To select your destination"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/activity_destination_bottom_estimated_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

</LinearLayout>