<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/select_train_background"
    android:orientation="vertical" >

    <!--  -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:background="@color/actionbar_blue"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/action_bar_home_title"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Trains In Next 5 Hours"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#626366"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/activity_train_list_search"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_6dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/search"
            android:hint="Search Train Name"
            android:textColor="#3D7DF0" 
            android:inputType="text"
            android:imeOptions="actionGo"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_train_list_animation_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical"
    >

        <ImageView
            android:id="@+id/activity_train_list_animation"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/loading" />

        <ImageView
            android:visibility="gone"
              android:src="@drawable/loading2"
              android:layout_gravity="center"
            android:id="@+id/activity_train_list_animation2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Please wait ..."
            android:textColor="#3D7DF0"
            android:textSize="@dimen/padding_18dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/activity_train_listview"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:dividerHeight="-1dp" />

</LinearLayout>